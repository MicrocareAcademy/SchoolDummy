@using SchoolDummy.Entities

@model IList<Student>


@{
    Layout = "_Layout";
}





<h1> Students</h1>

@if(Model != null && Model.Count > 0)
{
    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Student Name</th>
                <th>Roll No</th>
            </tr>
        </thead>
        <tbody>
    @foreach(var student in Model)
    {
        <tr>
            <td>@student.FullName</td>
            <td>@student.RollNo</td>
        </tr>
    }
       
         </tbody>
    </table>
}
else
{
    <h4>No Students..</h4>
}