@model SchoolDummy.Entities.Class
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
}

<div class="row">
    <h2>Class: @Model.Title 
        <a class="btn btn-outline-primary" style="float:right;" href="@Url.Action("ClassRoomsList","ClassRoom")">Back</a>
    </h2>
    <hr />

    @if(Model.Students != null && Model.Students.Count > 0)
    {
        <table class="table table-condensed">
            <thead>
                <tr>
                    <th>Student Name</th>
                    <th>Roll No</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model.Students)
                {
                    <tr id="@student.StudentId">
                        <td>@student.FullName</td>
                        <td>@student.RollNo</td>
                    </tr>
                }

            </tbody>
        </table>
    }
    else
    {
        <h4>No Students..</h4>
    }
</div>