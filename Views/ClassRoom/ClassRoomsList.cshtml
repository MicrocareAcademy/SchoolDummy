@using SchoolDummy.Entities

@model IList<Class>

@{
    Layout = "_Layout";
}

@if(Model != null && Model.Count > 0)
{
    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Class Title</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var classRoom in Model)
            {
                <tr>
                    <td>@classRoom.Title</td>
                    <td><a href="@Url.Action("ClassDetails","ClassRoom",new{classId = @classRoom.ClassId})">View</a></td>
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <h2>No Class Defined..</h2>
}