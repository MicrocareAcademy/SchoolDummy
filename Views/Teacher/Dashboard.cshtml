@model SchoolDummy.Models.TeachersListModel

@{
    Layout = "_Layout";
}

<div class="row">
    <h2>Teachers List | No Of Teachers(@Model.NoOfTeachers)</h2>
    <hr/>
</div>

<div class="row">
    @if (Model.Teachers != null && Model.Teachers.Count > 0)
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Qualification</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var teacher in Model.Teachers)
                {
                    <tr>
                        <td>@teacher.Name</td>
                        <td>@teacher.Qualification</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h2>No Teachers..</h2>
    }
</div>