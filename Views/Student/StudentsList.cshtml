@using SchoolDummy.Entities
@model IList<Student>

@{
    Layout = "_Layout";
}


@if (Model != null && Model.Count > 0)
{
    <h1>Students List <a href="@Url.Action("AddStudent","Student")" class="btn btn-primary">Add Student</a></h1>

    <div class="row">
        <table class="table table-condensed">
            <thead>
                <tr>
                    <th>Student Name</th>
                    <th>Roll No</th>
                    <th>Class</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model)
                {
                    <tr id="@student.StudentId">
                        <td>@student.FullName</td>
                        <td>@student.RollNo</td>
                        <td>@student.Class</td>
                        <td>
                            <a href="@Url.Action("EditStudent","Student",new{studentId = student.StudentId })">Edit</a>
                            |
                            <a href="javascript:0;" onclick="DeleteStudent(@student.StudentId)">Delete</a>
                            
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
}
else
{
    <h2>No Students Data ..</h2>
}

<script type="text/javascript">

    function DeleteStudent(StudentId) { 
    
        var url = "https://localhost:7037/Student/DeleteStudent";
        var parameters = { studentId : StudentId };

        $.post(url, parameters, function (data) {

            alert("Student with Id:" + StudentId + " was deleted");

            $("tr#" + StudentId).remove();

        });

    }
    

</script>